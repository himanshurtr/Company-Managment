
<center>
  <h1>Users-Profile </h1>
  <table border="3px solid black">

    <tr>
      <th style="border: 2px solid black; background-color:lightgrey;"><strong>ID</strong></th>
      <th style="border: 2px solid black; background-color:lightgrey;"><strong>Username-Login</strong></th>
      <th style="border: 2px solid black; background-color:lightgrey;"><strong>Role</strong></th>
      <th style="border: 2px solid black; background-color:lightgrey;"><strong>Display</strong></th>
    </tr>

    <% @users.each do |user| %>
      <tr>
        <td style="border: 2px solid black"><%= user.id %></td>
        <td style="border: 2px solid black"><%= user.email %></td>
        <td style="border: 2px solid black"><%= user.roles.pluck(:name).join(" ") %></td>
        <td style="border: 2px solid black"><%= link_to "Show", super_admin_user_path(user) %></td>
      </tr>
    
    <% end %>
  </table>
</center>
