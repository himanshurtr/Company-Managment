   <h5><strong>User ID:  </strong><%= @user.id %></h5>
   <h5><strong>Email:  </strong><%= @user.email %></h5>
   <h5><%= @user.roles.pluck(:name).join(" ") %></h5>
 <% if request.path == super_admin_users_path %>
   <%= link_to "Back", super_admin_users_path %>
 <%# elsif request.path == super_admin_company_user_path(@user.company_id) %>
   <%#= link_to "Back", super_admin_company_user_path %>
 <% end %>  

<% else %>
  <%= image_tag @user.image, style:"width:80px" if @user.image.attached? %><hr>
  <h4><strong>Company ID :</strong> <%= @user.company_id %></h4>
  <h5><strong>User ID :</strong><%= @user.id %></h5>
  <h5><%= @user.email %></h5>
